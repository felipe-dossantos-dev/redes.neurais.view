            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="20.0" prefWidth="200.0">
                     <children>
                        <Label text="Arquivo de treino: " />
                        <Label fx:id="txtTreino" text="..." />
                     </children>
                  </HBox>
                  <HBox prefHeight="20.0" prefWidth="200.0">
                     <children>
                        <Label text="Arquivo de teste: " />
                        <Label fx:id="txtTeste" text="..." />
                     </children>
                  </HBox>
                  <BarChart fx:id="chartTreino">
                    <xAxis>
                      <CategoryAxis fx:id="iteracaoAxis" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="valorAxis" side="LEFT" />
                    </yAxis>
                  </BarChart>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
